@page
@model Lab2._2_phamKhoaNam_W3.Pages.Shared.LoginModel
@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        max-width: 380px;
        margin: 80px auto;
        padding: 30px;
        border-radius: 12px;
        background-color: #2c2f48;
        box-shadow: 0 8px 16px rgba(0,0,0,0.25);
        color: #fff;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-size: 28px;
            color: #f8f8f8;
            letter-spacing: 1px;
        }

        .login-container label {
            font-weight: bold;
            display: block;
            margin-bottom: 6px;
            color: #ddd;
        }

        .login-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 18px;
            border: none;
            border-radius: 6px;
            background-color: #3a3d5c;
            color: #fff;
            font-size: 15px;
            outline: none;
            transition: background 0.3s ease;
        }

            .login-container input:focus {
                background-color: #464973;
            }

        .login-container button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s ease, background 0.3s ease;
        }

            .login-container button:hover {
                transform: scale(1.02);
                background: linear-gradient(135deg, #2575fc, #6a11cb);
            }

    .error-message {
        color: #ff4d4d;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
    }

    button {
        display: block; 
        width: 100%; 
        margin-bottom: 10px;
    }

    .btn-register {
        margin-top: 10px; 
    }

</style>

<div class="login-container">
    <h2>GameHub Login</h2>
    <form method="post">
        <div>
            <label>Email</label>
            <input asp-for="Email" />
        </div>
        <div>
            <label>Password</label>
            <input asp-for="Password" type="password" />
        </div>
        <div class="error-message">@Model.ErrorMessage</div>

        <!-- Login -->
        <button type="submit" class="btn-login">Login</button>

        <!-- Register -->
        <button type="button" class="btn-register" onclick="location.href='@Url.Page("/Shared/Register")'">Register</button>


    </form>
</div>

